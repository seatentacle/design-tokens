{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "lib": [
      "ES2017"
    ],
    "declaration": true,
    "outDir": "lib/",
    "downlevelIteration": true,
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "listEmittedFiles": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*"
  ]
}
